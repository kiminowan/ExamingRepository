/* pages/danxuan/danxuan.wxss */
.img{
width: 100%;
height: 100%;
}
.view_question{
  width: 350px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  min-height: 100px;
}
.select{
  width: 220px;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60px;
  line-height: 14px;
  margin-top: 20px;
  font-size: 14px;
}
.btn{
  height: 80px;
  width: 140px;
  line-height: 80px;
}
.btn_prev{
  float: left;
}
.btn_next{
  float: right;
}
.text_answer{
  color: red;
}
.view_answer{
  min-height: 93px;
  margin-top: 10px;
}
.btn_analysis{
  margin-top: 10px;
  width: 140px;
}
.view_currentAnswer{
  text-align: center;
}
.index{
  height: 120px;
  width: 30px;
  position: fixed;
  left: 0;
  top: 50%;
  margin-top: -80px;
}
.index view{
margin: 8px 0 0 -8px;
}